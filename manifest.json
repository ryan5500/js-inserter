{
  "manifest_version": 2,

  "name": "JS Inserter",
  "description": "閲覧中のサイトに対して特定のタグを挿入します。トラッキングタグのテストなどにご利用ください。",

  "version": "0.0.1",

  "permissions": [
      "webRequest",
      "http://*/*",
      "https://*/*"
  ],

  "content_scripts": [
      {
          "matches": ["http://*/*", "https://*/*"],
          "js": ["lib/jquery.min.js", "contentscript.js"]
      }
  ],

  "background": {
      "scripts": ["background.js"]
  },

  "options_page": "options.html",

  "web_accessible_resources": [
      "options.html"
  ]
}
